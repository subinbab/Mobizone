                   -webkit-text-stroke: thin; color:white; display:flex; text-decoration:none;">MOBIZONE</a>*@
            <a class="" asp-action="index" asp-controller="user" style="margin-left: 0px; font-size:90%;
                   -webkit-text-stroke: thin;color:white;text-decoration:none;">MOBIZONE</a>

        </div>
        <div class="col">
            <div class="row" style="align-items: baseline;color:white">
                <div class="searchBar">
                    <input  placeholder="Search" value="" autocomplete="on" type="search" id="tags" class="form-control" name="name" required />
                    <button id="search-btn" type="submit" name="searchQuerySubmit">
                        <svg style="width:24px;height:24px" viewBox="0 0 24 24">
                            <path fill="#666666" d="M9.5,3A6.5,6.5 0 0,1 16,9.5C16,11.11 15.41,12.59 14.44,13.73L14.71,14H15.5L20.5,19L19,20.5L14,15.5V14.71L13.73,14.44C12.59,15.41 11.11,16 9.5,16A6.5,6.5 0 0,1 3,9.5A6.5,6.5 0 0,1 9.5,3M9.5,5C7,5 5,7 5,9.5C5,12 7,14 9.5,14C12,14 14,12 14,9.5C14,7 12,5 9.5,5Z" />
                        </svg>
                    </button>
                </div>
            </div>
        </div>


        <div class="col">
            <div class="row">
                @if (User.Identity.IsAuthenticated)
                {

                    if (((System.Security.Claims.ClaimsIdentity)User.Identity).HasClaim("Role", "Admin"))
                    {
                        <p class="col-3" style="color: white; text-decoration: none; margin-bottom: 0rem; padding-top: 6px; ">Hello @User.Identity.Name </p>
                    }
                    else
                    {
                        <a asp-controller="User" asp-action="account" style="color:white;text-decoration:none;">Hello @User.Identity.Name </a>
                    }

                }
                else
                {
                    <div class="col" style="align-items: center; justify-content: center; display: flex; ">
                        <a asp-action="registration" style="color: white;" class="register">Register</a>

                    </div>
                }

                <div class="col" style="align-items: center;justify-content: center;display: flex;">


                    <div class="dropdown">
                        <a class="dropbtn" style="color: white; ">Account</a>
                        <div class="dropdown-content">

                            <div class="row" style=" justify-content: center; display: flex;  ">
                                @if (User.Identity.IsAuthenticated)
                                {
                                    if (((System.Security.Claims.ClaimsIdentity)User.Identity).HasClaim("Role", "Admin"))
                                    {
                                    }
                                    else
                                    {
                                        <a asp-controller="User" asp-action="account">My Account </a>
                                        <hr />
                                        <a asp-controller="User" asp-action="MyOrders">My Orders</a>
                                    }

                                    <hr />
                                    <a asp-controller="User" asp-action="Logout" style="padding-left: 29px;">Logout</a>
                                    <hr />



                                }
                                else
                                {
                                    <div class="col" style="align-items: center;justify-content: center;display: flex;">
                                        <a asp-action="registration">Register</a>
                                    </div>


                                    <a href="../Login">Login</a>


                                }
                            </div>
                        </div>
                    </div>



                </div>
                @if (((System.Security.Claims.ClaimsIdentity)User.Identity).HasClaim("Role", "Admin"))
                {
                }
                else
                {
                    <div class="row">
                        <div class="col" style="align-items: center;justify-content: center;display: flex;" id="cartIcon">

                            <a class="anchorTag" asp-action="addtocart"><i  class="fa-solid fa-cart-shopping nav-anchor-tag" style="font-size:26px;"></i></a>

                        </div>
                        @*<div class="col" style="align-items: center;justify-content: center;display: flex;">
                            <a id="cart-icon" class="nav-anchor-tag" style=" margin-right: 180%">Cart</a>*@
                        @*</div>*@
                    </div>
                }


            </div>


        </div>

    </div>
</nav>

<script>
    $(document).ready(function () {
        $.ajax({
            url: '/config/CartCount',
            type: 'get',
            success: function (data) {
                if (data == 0) {

                }
                else {
                    $("#cartIcon").addClass("badge1");
                    $("#cartIcon").attr("data-count", data);
                }

            }
        })
    })
</script>
