<nav class="navbar navbar-light " style="position: fixed; width: 100%; background: linear-gradient(to right,black, red ); ">


    <div class="container-fluid row">
        <div class="col-3" style="padding-top: 2%; margin-left: -3%;">

            <div style="margin-top: -8%;">
                <a class="" href="/" style="margin-left: 0px; font-size:95%;
                   -webkit-text-stroke: thin;color:white;text-decoration:none;">
                    <img src="~/css/Images/depositphotos_69864645-stock-illustration-letter-m-logo-icon-design-removebg-preview-removebg-preview.png" alt=" Mobizone" style="height:30px; width:40px;"
                         class="float-left" />
                </a>
            </div>
            <a class="" href="/" style="margin-left: 0px; font-size:95%;
                   -webkit-text-stroke: thin;color:white;text-decoration:none;">MOBIZONE</a>


        </div>
        <div class="col">
            <form class="row" style="align-items: baseline;color:white" asp-action="Search">
                <div class="form-outline col-10 mt-2">


                    <input autocomplete="on" type="search" id="tags" class="form-control" name="name" required />

                </div>
                <button type="submit" class="btn  col-2 btn-indigo" style="width: 10px;">
                    <i class="fas fa-search " style="font-size: 17px;"></i>
                </button>
            </form>
        </div>


        <div class="col">
            <div class="row">
                @if (User.Identity.IsAuthenticated)
                {

                    if (((System.Security.Claims.ClaimsIdentity)User.Identity).HasClaim("Role", "Admin"))
                    {
                        <p class="col-3" style="color: white; text-decoration: none; margin-bottom: 0rem; padding-top: 6px; ">Hello @User.Identity.Name </p>
                    }
                    else
                    {
                        <a asp-controller="User" asp-action="account" style="color:white;text-decoration:none;">Hello @User.Identity.Name </a>
                    }

                }
                else
                {
                    <div class="col" style="align-items: center; justify-content: center; display: flex; ">
                        <a asp-action="registration" style="color: white;">Register</a>

                    </div>
                }

                <div class="col" style="align-items: center;justify-content: center;display: flex;">


                    <div class="dropdown">
                        <a class="dropbtn" style="color: white; ">Account</a>
                        <div class="dropdown-content">

                            <div class="row" style=" justify-content: center; display: flex;  ">
                                @if (User.Identity.IsAuthenticated)
                                {
                                    if (((System.Security.Claims.ClaimsIdentity)User.Identity).HasClaim("Role", "Admin"))
                                    {
                                    }
                                    else
                                    {
                                        <a asp-controller="User" asp-action="account">My Account </a>
                                        <hr />
                                        <a asp-controller="User" asp-action="MyOrders">My Orders</a>
                                    }

                                    <hr />
                                    <a asp-controller="User" asp-action="Logout" style="padding-left: 29px;">Logout</a>
                                    <hr />



                                }
                                else
                                {
                                    <div class="col" style="align-items: center;justify-content: center;display: flex;">
                                        <a asp-action="registration">Register</a>
                                    </div>


                                    <a href="../Login">Login</a>


                                }
                            </div>
                        </div>
                    </div>



                </div>
                @if (((System.Security.Claims.ClaimsIdentity)User.Identity).HasClaim("Role", "Admin"))
                {
                }
                else
                {
                    <div class="row">
                        <div class="col" style="align-items: center;justify-content: center;display: flex;">

                            <a asp-action="addtocart" class=" "><i id="cartIcon" class="fa-solid fa-cart-shopping " style="font-size:26px;"></i></a>

                        </div>
                        <div class="col" style="align-items: center;justify-content: center;display: flex;">
                            <a asp-action="addtocart" style="color: white; text-decoration: none; margin-right: 180%">Cart</a>
                        </div>
                    </div>
                }


            </div>


        </div>

    </div>
</nav>

