@{
}
@{
    if (ViewBag.BrandList == null)
    {
        ViewBag.BrandList = "";
    }
}
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="~/css/SideBar.css" />
    <link rel="stylesheet" href="~/css/navigation-bar.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.1.1/css/all.min.css" />
    <link rel="stylesheet" href="~/css/footer.css" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Kanit&family=Nunito:wght@600&family=Oswald:wght@500&family=Roboto+Condensed:wght@700&family=Rubik&family=Sansita+Swashed:wght@600&family=Satisfy&display=swap" rel="stylesheet">
</head>
<body>


    <nav class="navbar navbar-light " style="position: fixed; width: 100%; background: linear-gradient(to right,black, red );">

        <div class="container-fluid row">
            <div class="col-3" style="padding-top: 2%; margin-left: -3%;">
                <img src="~/css/Images/depositphotos_69864645-stock-illustration-letter-m-logo-icon-design-removebg-preview-removebg-preview.png" alt=" Mobizone" style="height: 30px; width: 40px; margin-left: 2%; margin-top: -9%;"
                     class="float-left" />
                <div class="mobizone" style="margin-top: -8%; margin-left: 12%; ">
                    <a class="" asp-action="Index" style="margin-left: 0px; font-size: 95%; -webkit-text-stroke: thin; color: white; text-decoration: none; margin-top: 10%;">MOBIZONE </a>

                </div>
                <div class="col">
                    <form class="row" style="align-items: baseline;" asp-action="Search">
                        <div class="form-outline col-10 mt-2">
                            <input type="search" id="form1" class="form-control" name="name" />
                        </div>
                        <button type="submit" class="btn  col-2 btn-indigo" style="width: 10px; background-color: #dd0000;">
                            <i class="fas fa-search " style="font-size: 17px;"></i>
                        </button>
                    </form>
                </div>



                <div class="col">
                    <div class="row">

                        <div class="col" style="align-items: center;justify-content: center;display: flex;">
                            @if (User.Identity.IsAuthenticated)
                            {

                                <a asp-controller="User" asp-action="account" style="color:black;text-decoration:none;">@User.Identity.Name </a>
                                <a asp-controller="User" asp-action="Logout" style="padding-left: 29px;">Logout</a>



                            }
                            else
                            {
                                <div class="col" style="align-items: center;justify-content: center;display: flex;">
                                    <a href="registration">Register</a>
                                </div>

                                <a href="https://mobizone.azurewebsites.net/login">Login</a>
                            }
                        </div>
                        <div class="col" style="align-items: center;justify-content: center;display: flex;">
                            <a href="registration">Account</a>
                        </div>
                        <div class="col" style="align-items: center;justify-content: center;display: flex;">
                            <a asp-action="addtocart" class="fa-solid fa-cart-shopping"></a>
                        </div>
                        <div>
                            <a asp-action="addtocart" class="mr-3" style="margin-left:-130%">Cart</a>
                        </div>
                    </div>


                </div>

            </div>
        </div>
    </nav>



    <div class="content " style=" padding: 143px 16px;">
        <div class="container-fluid" style=" margin-left: 0px;">
            <main role="main" class="pb-3">
                <div id="mypartialview"></div>
                <div>
                    @RenderBody()

                </div>
            </main>
        </div>
    </div>


    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script>
        $(document).ready(function () {
            $("#filter").click(function () {
                $("#dropdown1").toggle();
            });

        });

        $(document).ready(function () {
            $("#sort").click(function () {
                $("#dropdown2").toggle();
            });
        });
    </script>

    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    @await Component.InvokeAsync("Notyf")
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>