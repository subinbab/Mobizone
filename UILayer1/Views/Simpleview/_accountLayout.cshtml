                                    }
                                    else
                                    {
                                        <div class="col" style="align-items: center;justify-content: center;display: flex;">
                                            <a asp-action="registration">Register</a>
                                        </div>


                                        <a href="../Login">Login</a>


                                    }
                                </div>
                            </div>
                        </div>



                    </div>
                    @if (((System.Security.Claims.ClaimsIdentity)User.Identity).HasClaim("Role", "Admin"))
                    {
                    }
                    else
                    {
