<h2 style="text-align:center">Product Adding </h2>
<div class="container-fluid mt-3 align-middle">
    <div class="card shadow-lg p-3 mb-5 bg-white rounded">
        <div class="card-body">
            <div class="">
                <div class="col-md-12">
                    <form asp-action="Create" class="col" enctype="multipart/form-data" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <input asp-for="id" runat="server" type="hidden" />



                        <div class="center">
                            <div class="form-group row mb-4">
                                <div class="col-md-4 row">
                                    <div asp-for="name" class="control-label" style="text-align-last:justify"> Name</div>
                                    <input asp-for="name" placeholder="Name" class="form-control" />

                                    <span asp-validation-for="name" class="text-danger"></span>
                                </div>



                                <div class="col-md-4 row">
                                    <div asp-for="model" class="control-label" style="text-align-last:justify"> Model</div>
                                    <input asp-for="model" placeholder="Model" class="form-control" />

                                    <span asp-validation-for="model" class="text-danger"></span>
                                </div>

                                <div class="col-md-4 row">
                                    <div asp-for="price" class="control-label" style="text-align-last:justify"> Price</div>

                                    <input asp-for="price" placeholder="Price" class="form-control" maxlength="6" />


                                    <span asp-validation-for="price" class="text-danger"></span>
                                </div>
                                <div class="col-md-4 row" style="padding-top: 2%">
                                    <div asp-for="quantity" class="control-label" style="text-align-last:justify"> Quantity</div>
                                    <input asp-for="quantity" placeholder="Quantity" class="form-control" />

                                    <span asp-validation-for="quantity" class="text-danger"></span>
                                </div>
                                <div class="col-md-4 row" style="padding-top: 2%">
                                    <label asp-for="productType" class="control-label"> Product Type</label>

                                    <select class="form-control master js-select2" asp-for="productType" asp-items="new SelectList(ViewBag.ProductType) "></select>
                                    <span asp-validation-for="productType" class="text-danger"></span>
                                </div>
                                <div class="col-md-4 row" style="padding-top: 2%">
                                    <label asp-for="productBrand" class="control-label"> Product Brand</label>

                                    <select asp-for="productBrand" class="form-control master js-select2" asp-items="new SelectList(ViewBag.BrandList)"></select>
                                    <span asp-validation-for="productBrand" class="text-danger"></span>
                                </div>
                                <div class="col-md-4 row" style="padding-top: 2%">
                                    <label asp-for="specs.processor" class="control-label">Processor</label>

                                    <select asp-for="specs.processor" class="form-control master js-select2" asp-items="new SelectList(ViewBag.Processor)"></select>
                                    <span asp-validation-for="specs.processor" class="text-danger"></span>
                                </div>
                                <div class="col-md-4 row" style="padding-top: 2%">
                                    <label asp-for="specs.ram" class="control-label"> Ram</label>

                                    <select asp-for="specs.ram" multiple class="form-control master js-select2" asp-items="new SelectList(ViewBag.Ram)"></select>

                                    <span asp-validation-for="specs.ram" class="text-danger"></span>
                                </div>
                                <div class="col-md-4 row" style="padding-top: 2%">
                                    <label asp-for="specs.storage" class="control-label"> Storage</label>

                                    <select asp-for="specs.storage" multiple class="form-control  js-select2" asp-items="new SelectList(ViewBag.Storage)"></select>

                                    <span asp-validation-for="specs.storage" class="text-danger"></span>
                                </div>
                                <div class="col-md-4 row" style="padding-top: 2%">
                                    <label asp-for="specs.core" class="control-label"> Core</label>

                                    <select asp-for="specs.core" class="form-control master js-select2" asp-items="new SelectList(ViewBag.Core)"></select>
                                    <span asp-validation-for="specs.core" class="text-danger"></span>
                                </div>
                                <div class="col-md-4 row" style="padding-top: 2%">
                                    <label asp-for="specs.camFeatures" class="control-label">Cam Features</label>

                                    <select asp-for="specs.camFeatures" class="form-control master js-select2" asp-items="new SelectList(ViewBag.camFeatures)"></select>
                                    <span asp-validation-for="specs.camFeatures" class="text-danger"></span>
                                </div>
                                <div class="col-md-4 row" style="padding-top: 2%">
                                    <label asp-for="specs.simType" class="control-label"> Sim Type</label>

                                    <select asp-for="specs.simType" class="form-control master js-select2" asp-items="new SelectList(ViewBag.SimType) "></select>
                                    <span asp-validation-for="specs.simType" class="text-danger"></span>
                                </div>
                                <div class="col-md-12" style="padding-top: 2%">
                                    <div asp-for="description" class="control-label" style="text-align-last:justify;  margin-top:30px"> Description</div>
                                    @*<textarea asp-for="description" class="form-control" id="exampleFormControlTextarea1" rows="3"></textarea>*@
                                    <input asp-for="description" placeholder="maximum limit upto 100-250 words" class="form-control" id="Description" rows="3" style="height:120%" maxlength="250" />
                                    <span asp-validation-for="description" class="text-danger"></span>
                                </div>


                            </div>
                        </div>
                        <div class="col-md-8 col-10">
                        </div>
                            @if (Model == null)
                            {
                                <input type="submit" value="Add" id="btn-submit" class="m-1 float-right  btn btn-primary col-md-2 col-1 align-items-lg-start" style="width: 6%; margin-top: 21px; background-color: #e52d2e" />
                            }
                            else
                            {
                                <input type="submit" value="Update" id="btn-submit" class="m-1 float-right  btn btn-primary col-md-2 col-1 align-items-lg-start" style="width: 6%; margin-top: 184px; background-color: #e52d2e;" />
                            }
                            <a style="color: white; margin-left: 656%; width: 6%; padding-bottom: -10px; " asp-controller="Admin" asp-action="Index" class="col-md-2 float-right btn btn-primary col-1 align-items-lg-start"><b>Back</b></a>
                        
                    </form>


                    

                </div>
                
                
            </div>

