<style type="text/css">
		 .image_container {
		 	height: 120px;
		 	width: 200px;
		 	border-radius: 6px;
		 	overflow: hidden;
		 	margin: 10px;
		 }
		 .image_container img {
		 	height: 100%;
		 	width: auto;
		 	object-fit: cover;
		 }
		 #delete {
		 	top: -6px;
		 	right: 8px;
		 	color: red;
		 	font-size: 50px;
