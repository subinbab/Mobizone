@{
    Layout = "~/Views/Simpleview/_UserLogin.cshtml";
    ViewData["Title"] = " Mobizone - Login";
}

@{
    var returnUrl = ViewData["ReturnUrl"] as string;
    var error = TempData["error"] as string;
}
@model DomainLayer.Users.LoginViewModel
@{ if (User.Identity.IsAuthenticated)
    {
        <script type="text/javascript">
            function noBack() { window.history.forward() }
            noBack();
            window.onload = noBack;
            window.onpageshow = function (evt) { if (evt.persisted) noBack() }
            window.onunload = function () { void (0) }
        </script>
    }
}



<div class="row ">

    <section class="ftco-section col-12" style="margin-top: 145px;">

        <div class="row justify-content-center ">
            <div class="card shadow-lg p-3 mb-5 bg-white rounded" style="margin-left:-13%;position:fixed;">
                <div class="col-12">
                    <div class="row">

                        <div class="col-12  ">
                            <div class="d-flex" style="text-align: center;">
                                <a href="/user/Index">
                                    <img src="~/css/Images/depositphotos_69864645-stock-illustration-letter-m-logo-icon-design-removebg-preview-removebg-preview.png" alt=" Mobizone" style="height:62px; width:65px;margin-left:100px ; " />

                                </a>
                                <div class="w-100">
                                    <h3 class="mb-4" style="margin-top:65px; margin-left:-200px">Login</h3>
                                </div>

                            </div>
                            <form action="/Login?ReturnUrl=@System.Net.WebUtility.UrlEncode(returnUrl)" method="post">
                                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                <div class="form-group">
                                    <label asp-for="username" class="control-label"></label>
                                    <input asp-for="username" class="form-control" />
                                    <div>
                                        <span style="width:50px;" asp-validation-for="username" class="text-danger"></span>
                                    </div>
                                    
                                </div>
                                <div class="form-group">
                                    <label asp-for="password" class="control-label"></label>
                                    <input asp-for="password" class="form-control" />
                                    <div>
                                        <span style="width:50px;" asp-validation-for="password" class="text-danger"></span>
                                    </div>
                                    
                                </div>
                                <div class="form-group">
                                    <input type="submit" class="form-control button rounded submit px-3" style="color: white; background-color: #e52d2e" value="Login" />
                                </div>
                            </form>
                            <div>
                                <a asp-controller="user" asp-action="ForgotPassword" style="color:white;"> Forgot Password ?</a>
                            </div>
                            <div>
                                <a asp-controller="user" asp-action="registration" style="color:white;">If not a user,Register here</a>
                            </div>
                            @if (!string.IsNullOrEmpty(error))
                            {
                                <div class="alert alert-danger" role="alert">
                                    @error
                                </div>
                            }



                        </div>

                    </div>
                </div>
            </div>

        </div>
    </section>

</div>
<div>

</div>
<br />
<br />


<style>
    .img {
        width: 2350px;
        vertical-align: middle;
        border-style: none;
        vertical-align: middle;
        border-style: none;
        background-color: white;
        margin-left: 30px;
        margin-top: 50px;
        display: none;
    }

    .button {
        background-color: indianred;
    }

    section {
        margin-left: 0px;
        margin-top: 0px;
    }

    .form-control {
        display: inline-block;
    }

    .bg-white {
        background: linear-gradient(to bottom,#fff1f1 40%,#605757 ) !important;
    }

    .alert-danger {
        color: #040404;
        background-color: #f1f1f1;
        border-color: #f5c6cb;
    }
</style>
<div class="row" style="width: 400px; margin-left: 644px; margin-right:auto;">


</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
