@model BusinessObjectLayer.ProductOperations.ProductSubPart
<div class="container-fluid mt-3 align-middle">
        <div class="card shadow-lg p-3 mb-5 bg-white rounded">
            <div class="card-body">
                <div class="">
<div class="row">
    <div class="col-md-4">
        <form asp-action="ProductsSubPart" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            @if(Model == null)
                            {
                                 <input asp-for="id" type="hidden" value="0"/>
                            }
                            else
                            {
                                 <input asp-for="id" type="hidden" value="@Model.id"/>
                            }
                           
            <div class="form-group">
                @*<label asp-for="productId" class="control-label"></label>*@
                <input asp-for="productId" class="form-control" value="@ViewBag.ProductId" type="hidden"/>
                <span asp-validation-for="productId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ramId" class="control-label"></label>
                <select name="ram" class="form-control master js-select2"   asp-items="new SelectList(ViewBag.Rams)"></select>
                <span asp-validation-for="ramId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="storageId" class="control-label"></label>
                <select name="storage" class="form-control master js-select2"   asp-items="new SelectList(ViewBag.Storages)"></select>
                <span asp-validation-for="storageId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="quantity" class="control-label"></label>
                <input asp-for="quantity" class="form-control" />
                <span asp-validation-for="quantity" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="price" class="control-label"></label>
                <input asp-for="price" class="form-control" />
                <span asp-validation-for="price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
</div>
</div>
</div>
</div>
<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
