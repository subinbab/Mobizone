@{
}
@{
    var data = ViewData["ProductDetails"] as DomainLayer.ProductModel.ProductEntity;
    var user = ViewData["userData"] as DomainLayer.Users.UserRegistration;
}

<div class="container-fluid mt-3">
    <div class="row">
        <div class="col-sm-6 container-fluid">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Delivery Address</h5>

                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" value="" id="flexCheckDefault">
                        <label class="form-check-label" for="flexCheckDefault">
                            User <br> street no:2<br> Place
                        </label>
                    </div>

                    <div class="row">
                        <div class="col"><a class="btn btn-light "><button>Add New Address</button></a></div>
                        <div class="col"></div>
                        <div class="col col d-flex justify-content-end"><a href="#" class="btn btn-primary " onclick="orderDetails()">continue</a></div>
                    </div>

                </div>
            </div>
            <div class="card order mt-3" style="display:none">
                <div class="card-body">

                    <h5 class="card-title">Delivery Address</h5>
                    @if(user.address == null)
                    {
                        <p>No address available please create one </p>
                    }
                    else
                    {
                        <div class="form-check">

                        <input class="form-check-input" type="checkbox" value="" id="flexCheckDefault">
                        <label class="form-check-label" for="flexCheckDefault">
                            Samsung Galaxy M12(Blue,6GB RAM,128GB Storage)<br>17499/-
                           <div class=>Qty:<input type="number" style="width:50px; height:20px;"></div>
                        </label>

                        </div>
                    }
                    
                    <p class="card-text">With supporting text below as a natural lead-in to additional content.</p>

                    <div class="row">

                        <div class="col col d-flex justify-content-end"><a href="#" class="btn btn-primary " onclick="paymentDetails()">continue</a></div>
                    </div>

                </div>
            </div>
            <div class="card payment mt-3" style="display:none">
                <div class="card-body">
                    <h5 class="card-title">Payment</h5>
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" value="" id="flexCheckDefault">
                        <label class="form-check-label" for="flexCheckDefault">
                            Cash On Delivery
                        </label>
                    </div>
                    <p class="card-text"></p>
                    <div class="row">
                        <div class="col"></div>
                        <div class="col col d-flex justify-content-end"><a href="#" class="btn btn-primary " onclick="orderDetails()">continue</a></div>
                    </div>


                </div>
            </div>
        </div>
        <div class="col">
            <!-- Card with center text alignment -->
            <div class="card text-center">
                <div class="card-body">
                    <h5 class="card-title">Price Details</h5>
                    <hr />
                    <p class="card-text">Price (1 item) : 17499/-</p>
                    <p class="card-text">Shipping Charge : 0</p>
                    <h3 class=" card p-2">Total :17499/-</h3>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    function paymentDetails() {
        $(".payment").show();
    }
    function orderDetails() {
        $(".order").show();
    }
</script>
