@model IEnumerable<DomainLayer.Checkout>
@{
    Layout = "~/Views/Simpleview/_BasicLayoutcshtml.cshtml";

}
<h3 style="text-align:center">My Orders</h3>
<div class="container-fluid mt-3 align-middle">
    <div class="card shadow-lg p-3 mb-5 bg-white rounded">
        <div class="card-body">
            <div class="">
                <table id="datatable" class="table table-bordered table-hover table-sm" style="width:100%">
                   

                            <div class="product">Product</div>
                            <div class="price">Price</div>
                            <div class="status">Status</div>

                    @foreach (var data in Model)
                    {
                        <div class=" text-md-center" style=" margin-top: 3%;">
                            <a asp-action="OrderDetails" asp-route-id="@data.id"><img src="/Product/Images/@data.product.images.FirstOrDefault().imagePath" alt=" Samsung" style="height:70px;margin-right:90%; width:70px;" /></a>
                        </div>



                        <h5 style=" font-size: 120%; margin-top: -5%; margin-left: 9%; } ">@data.product.name @data.product.model (@data.product.specs.rams.FirstOrDefault().ram)</h5>
                        <div style=" margin-left: 9%;">
                            <h5>Quantity : @data.quantity</h5>

                        </div>


                        <div>
                            <h3 style=" margin-left: 53%; font-size: 120%; margin-top: -2%;">  &#8377 @data.price</h3>
                        </div>

                        <div style="margin-left: 83%; margin-top: -2%;">
                            <h5> @data.status</h5>
                        </div>
                    }
                </table>
            </div>
        </div>
    </div>
</div>
<style>
    .product {
        margin-left: 8%;
        font-size:150%;
    }
    .price {
        margin-top: -2%;
        margin-left: 53%;
        font-size: 150%;
    }
    .status {
        margin-left: 85%;
        margin-top: -2%;
        font-size: 150%;
    }
    
</style>






<a type="button" class="btn  btn-orange" style="background-color: #5be5b2; padding-left: 1%; padding-right: 1%; color: black; margin-left: 81%; margin-top: 13%; " asp-action="index">Back</a>&nbsp;
