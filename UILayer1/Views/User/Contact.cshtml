@{
    ViewData["Title"] = "Mobizone- Contact Us";
    Layout = "~/Views/Simpleview/_BasicLayout.cshtml";
}



@model DomainLayer.AdminContact




<div class="container-fluid mt-3 align-middle">
    <div class="card shadow-lg p-3 mb-5 bg-white rounded" style="margin-left: 19%; margin-right: 25%;">
        <div class="card-body">
            <section class=" flex-fill" style="margin-left: 0px;">
                <div class=" text-center">

                    <h2>Contact Us</h2>
                    <div class=" contact us" >
                        <div class="text-center">
                            <div class=" " container>
                                <div class="row mt-3">
                                    <div class="col-8" style=" margin-left: 25%;">
                                        <div class="row">
                                            <p class="card-text col-3 row " style="color:darkblue">Address</p>
                                            <p class="col-6 row" style="white-space: nowrap;"><b>@Model.shopName</b></p>
                                        </div>
                                        <div class="row">
                                            <p class="card-text col-3 row "></p>
                                            <p class="col-6 row"><b>@Model.pincode,@Model.district</b></p>
                                        </div>
                                        <div class="row">
                                            <p class="card-text col-3 row "></p>
                                            <p class="col-6 row"><b>@Model.state ,@Model.country</b></p>
                                        </div>

                                        <div class="row">
                                            <p class="card-text col-3 row "style="color:darkblue">Email</p>
                                            <p class="col-6 row"><b>@Model.email</b></p>
                                        </div>
                                        <div class="row">
                                            <p class="card-text col-3 row "style="color:darkblue">Phone</p>
                                            <p class="col-6 row"><b>@Model.phoneNumber</b></p>
                                        </div>

                                    </div>
                                </div>
                            </div>

                        </div>
                    </div>

                </div>
            </section>
        </div>
    </div>

</div>
