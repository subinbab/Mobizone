<div class="" style="padding-top:60px;">
    <div class="sidebar" style="">

        <div id="filter">
            <a class="@(Context.Request.Path == "/User/" ? "active" : "")">Filter</a>
            <div id="dropdown1" class="dropdown">
                <a asp-action="brand" class="@(Context.Request.Path == "/User/Filter/Brand" ? "active " : "")">Brand</a>
            </div>
        </div>
        <div id="sort">
            <a class="@(Context.Request.Path == "/User/Sort" ? "active" : "")">Sort</a>
            <div id="dropdown2" class="dropdown">
