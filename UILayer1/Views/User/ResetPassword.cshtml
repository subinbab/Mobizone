@model DTOLayer.UserModel.ResetPassword

@{
     Layout = "~/Views/Simpleview/_UserLogin.cshtml";
    ViewData["Title"] = "Mobizone- ResetPassword";
}



<div class="row">

    <section class="ftco-section col-12" style="margin-top: 145px;">

        <div class="row justify-content-center ">
            <div class="card shadow-lg p-3 mb-5 bg-white rounded">
                <div class="col-12">
                    <div class="row ">
                        <a asp-action="Index">
                            <div class="img col" style="background-image:url(images/xbg-1.jpg.pagespeed.ic.3OAd9jZTMD.webp)">
                                <img src="~/css/Images/depositphotos_69864645-stock-illustration-letter-m-logo-icon-design-removebg-preview.png" width="250px" />
                            </div>
                        </a>

                        <div class="col-12  ">
                            <div class="d-flex" style="text-align: center;">
                                <a asp-action="index">
                                    <img src="~/css/Images/depositphotos_69864645-stock-illustration-letter-m-logo-icon-design-removebg-preview-removebg-preview.png" alt=" Mobizone" style="height: 62px; width: 65px; margin-left: 125px; " />

                                </a>
                                <div class="w-100">
                                    <h3 class="mb-4" style="margin-top:65px; margin-left:-170px">Reset Password</h3>
                                </div>

                            </div>
                            <form action="/user/ResetPassword" method="post">
                                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                                <input asp-for="User.Email" class="form-control" type="hidden" />

                                <div class="form-group">
                                    <label asp-for="newPassword" class="control-label"></label>
                                    <input asp-for="newPassword" class="form-control" />
                                    <span asp-validation-for="newPassword" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="confirmPassword" class="control-label"></label>
                                    <input asp-for="confirmPassword" class="form-control" />
                                    <span asp-validation-for="confirmPassword" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <input type="submit" class="btn btn-orange" value="Reset Password" />
                                </div>
                            </form>

                        </div>

                    </div>
                </div>
            </div>

        </div>
    </section>
</div>


  


<style>
    .img {
        width: 2350px;
        vertical-align: middle;
        border-style: none;
        vertical-align: middle;
        border-style: none;
        background-color: white;
        margin-left: 30px;
        margin-top: 50px;
        display:none;
    }
    
    .button {
        background-color: indianred;
    }
    section {
        margin-left: 0px;
        margin-top: 0px;
    }
    .form-control {
        display: inline-block;
    }
    .bg-white {
        background: linear-gradient(to bottom,#fff1f1 40%, #222121 ) !important;
        margin-left:-15%;
    }
    .btn-orange {
        color: #ffffff;
        background-color: red;
        font-size: 16px;
        font-weight: bold;
    }
    .alert-danger {
        color: #040404;
        background-color: #f1f1f1;
        border-color: #f5c6cb;
    }
</style>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
