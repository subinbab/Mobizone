@{
    ViewData["Title"] = "Mobizone- Buy Now";
    var carts = ViewData["cartDetails"] as List<DomainLayer.CartDetails>;
}
@model DomainLayer.Checkout
@{
    var data = ViewData["ProductDetails"] as List<DomainLayer.ProductModel.ProductEntity>;
    var user = ViewData["userData"] as DomainLayer.Users.UserRegistration;
    var cartData = ViewData["cart"] as DomainLayer.MyCart;
    var values = Enum.GetValues(typeof(DomainLayer.PaymentModes));
    Layout = "~/Views/Simpleview/_BasicLayoutcshtml.cshtml";
    var ReturnUrl = ViewBag.ReturnUrl as string;
    int? price = 0;
    int count = 0;
    if (cartData != null)
    {
        foreach (var cartDetailsData in cartData.cartDetails)
        {
            price = price + cartDetailsData.price;
        }
    }
}

<script src="~/lib/jquery/dist/jquery.min.js"></script>

@if (user == null)
{
    <h5>Not A User</h5>
    <a asp-action="login" class="btn btn-primary">Click To Login</a>
}
else
{ }
<div class="container-fluid mt-3">

    <div class="row" style="margin-right: 6%;margin-left: 7%;">
        <form action="/user/BuyCart" method="post" class="col" id="idForm">
            <input asp-for="id" value="0" type="hidden" />
            @*<input asp-for="productId" type="hidden" value="@data.id" />*@
            <input asp-for="userId" type="hidden" value="@user.UserId" />
            <div>

                <div class="card ">
                    <div class="">
                        <div class="address"><p class="card-title">Delivery Address</p></div>

                        @if (user.address == null)
                        {
                            <p>No address available please create one </p>
                        }
                        else
                        {
                            <div class="addressDetails" id="realDiv">
                                @foreach (var address in @user.address)
                                {
                                    <div class="form-check ">
                                        <label asp-for="@Model.addressList[count].IsChecked">
                                            <input multiple class="form-check-input check  addressInput" asp-for="@Model.addressList[count].IsChecked" type="checkbox" id="@address.id" onchange="showbutton1()" style="margin-top:-8%" />
                                        </label>
                                        @*@Html.CheckBoxFor(model => model.addressList[count].IsChecked, new { @class = "check",@id=address.id })*@
                                        <input asp-for="addressList[count].id" value="@address.id" type="hidden" />
                                        <input asp-for="addressList[count].address" value="@address.address" type="hidden" />
                                        <input asp-for="addressList[count].country" value="@address.country" type="hidden" />
                                        <input asp-for="addressList[count].district" value="@address.district" type="hidden" />
                                        <input asp-for="addressList[count].name" value="@address.name" type="hidden" />
                                        <input asp-for="addressList[count].phoneNumber" value="@address.phoneNumber" type="hidden" />
                                        <input asp-for="addressList[count].pincode" value="@address.pincode" type="hidden" />
                                        <input asp-for="addressList[count].additionalInfo" value="@address.additionalInfo" type="hidden" />
                                        <input asp-for="addressList[count].state" value="@address.state" type="hidden" />
                                        <label class="form-check-label @address.id" for="flexCheckDefault" id="@address.id">
                                            @address.name <br> @address.address<br> @address.district
                                        </label>
                                    </div>
                                    <hr />
                                    count++;
                                }
                            </div>
                        }
                        <div id="selectedAddress" style="margin:2%;"></div>

                        <div class="row">
                            <div class="col"><a id="addNewAddress" href="/user/address?ReturnUrl=@ReturnUrl" class="btn btn-orange" style=" color:white;margin-bottom:5%;">Add New Address</a></div>
                            <div class="col col d-flex justify-content-end " id="addressContinue ">
                                <a style=" background-color: #e52d2e; display: none; color: white; margin-bottom: 5%; margin-right: 3%;" href="#" class="btn btn-orange  " id="submit_prog" onclick="orderDetails()">continue</a>
                            </div>

                        </div>
                    </div>
                </div>
                <div class="card order mt-3" style="display:none">
                    <div class="">

                        <h5 class="card-title address">Order Summary</h5>
                        @if (carts != null)
                        {
                            @foreach (var cart in carts)
                            {
                                <div class="orderDetails">
                                    <div class="form-check">
                                        <div class="">
                                            <div class="col-12">
                                                @if (cart.product.images == null || cart.product.images.Count() == 0)
                                                {
                                                    <p>no image</p>
                                                }
                                                else
                                                {
                                                    <img src="~/Product/Images/@cart.product.images.FirstOrDefault().imagePath" style="width: 10%;">
                                                }
                                                <label class="form-check-label" for="flexCheckDefault" style="font-weight: bold;">
                                                    @if (cart.product.specs.rams != null && cart.product.specs.rams.Count() > 0)
                                                    {@cart.product.name;
                                                }
                                                    (@if (cart.product.specs.rams != null && cart.product.specs.rams.Count() > 0)
                                                    {
                                                        @cart.product.specs.rams.FirstOrDefault().ram;
                                                    } GB, @if (cart.product.specs.storages != null && cart.product.specs.storages.Count() > 0)
                                                    {
                                                        @cart.product.specs.storages.FirstOrDefault().storage} GB)<br>&#8377 @cart.product.price
                                                        Qty:<input disabled name="quantity" asp-for="quantity" type="number" style="width:50px; height:20px;" value="@cart.quantity" id="pricetag" />
                                                    </label>
                                                </div>

                                            </div>





                                        </div>
                                    </div>
                                }

                        }





                        <div class="row">
                            <div class="col">
                                <a href="#" class="btn btn-orange toggle-button2" style="background-color: #e52d2e; color: white; margin-bottom: 5%; " onclick="orderDetailsCancel()">cancel</a>
                            </div>
                            <div class="col col d-flex justify-content-end " style="display:none"><a href="#" class="btn btn-orange toggle-button2" style="background-color: #e52d2e; color: white; margin-bottom: 5%; margin-right: 16%; }" onclick="paymentDetails()">continue</a></div>
                        </div>

                    </div>
                </div>
                <div class="card payment mt-3" style="display:none">
                    <div class="">
                        <h5 class="card-title address">Payment</h5>
                        @foreach (var item in values)
                        {

                            <div class="form-check">
                                @* <input class="form-check-input" onchange="displaySubmit()" name="paymentModeId" type="checkbox" value='@Convert.ToInt32(item)'>*@
                                <label class="form-check-label" for="flexCheckDefault">
                                    @item
                                </label>
                            </div>
                        }
                        <p class="card-text"></p>
                        <div class="row">
                            <div class="col"><a href="#" onclick="paymentCancel()" class="btn btn-orange">Cancel</a></div>
                            <div class="col"></div>
                            <div class="col col d-flex justify-content-end "><input type="submit" value="Confirm Order" class="btn btn-orange submit" style="background-color: #e52d2e; margin-bottom: 5%; margin-right: 5%; color: white;" id="order-submit" /></div>
                        </div>
                    </div>
                </div>


            </div>
        </form>

     
        <div class="col-6">
            <div class="card" style="margin-left: 19%;margin-right: -38%;">

                <div class="Price">
                    <h5 class="card-title" style="">Price Details</h5>

                </div>
                <div>
                   <div class="card-text"> <div class="row"><p class="col-6">Price <p class="col-6" style="font-weight: bold;"> @price </p>  </div></div>
                    <div class="card-text"> <div class="row"><p class="col-6">Shipping Charge <p class="col-6" style="font-weight: bold; color: green;">  Free</p>  </div></div>
                    <div id="price"></div>
                </div>

                <div class="">
                    <div class="card-text"> <div class="row"><p class="col-6">Total Payable  <p class="col-6" style="font-weight: bold;"> @price </p>  </div></div>
                </div>




            </div>
        </div>
        <!-- Card with center text alignment -->


    </div>
</div>


