@model DTOLayer.UserModel.ForgetPasswordViewModel

@{
    Layout = "~/Views/Simpleview/_UserLogin.cshtml";
    ViewData["Title"] = "ForgotPassword";
}
<div style="width: 400px; margin-left: auto; margin-right:auto;">
    <h1>Reset Password</h1>
</div>




<div class="row">
    <div class="col-md-4" style="width: 400px; margin-left: auto; margin-right:auto;">
        <form asp-action="ForgotPassword">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Continue" class="btn btn-primary" />
            </div>


        </form>

        <div class="form-group">
            <button class="btn btn-light"><a asp-controller="User" asp-action="index" style="text-decoration:none;"><b>Back</b></a></button>
        </div>
    </div>
</div>

