@model DomainLayer.ProductModel.ProductEntity

@{
    Layout = "~/Views/Simpleview/_UserLogin.cshtml";
    var data = ViewData["images"] as IEnumerable<DomainLayer.ProductModel.Images>;
    var data1 = ViewData["images"] as IEnumerable<DomainLayer.ProductModel.Images>;
}


<div class="row container-fluid pr-6">
    <div class="container-fluid mt-3 align-middle">
        <div class="card shadow-lg p-3 mb-5 bg-white rounded">
            <div class="card-body">
                <div class="row">
                    <div class="col-1">
                        <table class="table ">
                            @if (Model.images == null)
                            {
                                <h1>No images</h1>
                            }
                            else
                            {
                                foreach (var item in Model.images)
                                {
                                    <div class="card" style="width : 50px; height:100px;">
                                        <img src="~/Product/Images/@item.imagePath" width="50" height="100" onclick="showImage('@item.imagePath');" />

                                    </div>

                                }
                            }

                        </table>
                    </div>
                    <div class="col-4">
                        @if (Model.images != null && Model.images.Any())
                        {

                            <img class="showimage" src="~/Product/Images/@Model.images.FirstOrDefault().imagePath" width=250 height=500 />
                            <div class="row mt-3">
                                <div class="col buynow"><a asp-action="checkout" asp-route-id="@Model.id"><button class="btn btn-orange">Buy Now</button></a></div>
                                <div class="col"><a asp-action="cartpage" asp-route-id="@Model.id"><button class="btn btn-indigo" style="font-size: 15px;">Add to Cart</button></a></div>
                            </div>

                        }
                        else
                        {
                            <p>No Image</p>
                        }
                    </div>



                    <div class="col-6 pb-3">
                        <div>
                            <h2 class="card-title " style="margin-left: -20%;">@Model.name</h2>
                        </div>
                        <br />
                        <div>
                            <h3 class="card-subtitle" style=" margin-left: -18%; color: indianred;"><b>&#8377 @Model.price</b> </h3>
                        </div>
                        <div class="col-12">
                            <div class="row mt-3">

                                <div class="col-3">
                                    <p><h4><b>Highlights</b></h4></p>
                                </div>
                                <div class="col-8" style="padding-top:9% ; margin-left:-24%">
                                    <div class="row">
                                        <p class="card-text col-6 row ">Brand</p>
                                        <p class="col-6 row"> @Model.productBrand</p>
                                    </div>
                                    <div class="row">
                                        <p class="card-text col-6 row ">Model</p>
                                        <p class="col-6 row">  @Model.model</p>
                                    </div>

                                </div>
                            </div>
                            <div class="row mt-3">

                                <div class="col-3">
                                    <p><h4><b>Specification</b></h4></p>
                                </div>
                                <div class="col-8" style="padding-top:10% ; margin-left:-25%">
                                    <div class="row">
                                        <p class="card-text col-6 row"> Operating System </p>
                                        <p class="col-6 row"> @Model.specs.os</p>
                                    </div>
                                    <div class="row">
                                        <p class="card-text col-6 row "> Processor</p>
                                        <p class="col-6 row"> @Model.specs.processor</p>
                                    </div>
                                    <div class="row">
                                        <p class="card-text col-6 row"> Processor Core</p>
                                        <p class="col-6 row">@Model.specs.core</p>
                                    </div>
                                    <div class="row">
                                        <p class="card-text col-6 row "> Ram </p>
                                        <p class="col-6 row">
                                            @foreach (var item in Model.specs.rams.ToList())
                                            {<span style="border-block: outset;">@item.ram </span>}
                                        </p>
                                    </div>
                                    <div class="row">
                                        <p class="card-text col-6 row"> Storage</p>
                                        <p class="col-6 row">
                                            @foreach (var item in Model.specs.storages.ToList())
                                            {<span style="border-block: outset;">@item.storage </span>}
                                        </p>
                                    </div>
                                    <div class="row">
                                        <p class="card-text col-6 row"> SimType</p>
                                        <p class="col-6 row">@Model.specs.simType</p>
                                    </div>
                                    <div class="row">
                                        <p class="card-text col-6 row"> Camera </p>
                                        <p class="col-6 row"> @Model.specs.camFeatures</p>
                                    </div>
                                    <div class="row">
                                        <p class="card-text col-6 row "> Quantity</p>
                                        <p class="col-6 row"> @Model.quantity</p>
                                    </div>
                                </div>

                            </div>
                        </div>























