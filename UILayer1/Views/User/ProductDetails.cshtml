                                </div>
                                <div class="col-8" style="padding-top:9% ; margin-left:-24%">
                                    <div class="row">
                                        <p class="card-text col-6 row ">Brand</p>
                                        <p class="col-6 row"> @Model.productBrand</p>
                                    </div>
                                    <div class="row">
                                        <p class="card-text col-6 row ">Model</p>
                                        <p class="col-6 row">  @Model.model</p>
                                    </div>

                                </div>
                            </div>
                            <div class="row mt-3">

                                <div class="col-3">
                                    <p><h4><b>Specification</b></h4></p>
                                </div>
                                <div class="col-8" style="padding-top:10% ; margin-left:-25%">
                                    <div class="row">
                                        <p class="card-text col-6 row"> Operating System </p>
                                        <p class="col-6 row"> @Model.specs.os</p>
                                    </div>
                                    <div class="row">
                                        <p class="card-text col-6 row "> Processor</p>
                                        <p class="col-6 row"> @Model.specs.processor</p>
                                    </div>
                                    <div class="row">
                                        <p class="card-text col-6 row"> Processor Core</p>
                                        <p class="col-6 row">@Model.specs.core</p>
                                    </div>
                                    <div class="row">
                                        <p class="card-text col-6 row "> Ram </p>
                                        <p class="col-6 row">
                                            @foreach (var item in Model.specs.rams.ToList())
                                            {<span style="border-block: outset;">@item.ram </span>}
                                        </p>
                                    </div>
                                    <div class="row">
                                        <p class="card-text col-6 row"> Storage</p>
                                        <p class="col-6 row">
                                            @foreach (var item in Model.specs.storages.ToList())
                                            {<span style="border-block: outset;">@item.storage </span>}
                                        </p>
                                    </div>
                                    <div class="row">
                                        <p class="card-text col-6 row"> SimType</p>
                                        <p class="col-6 row">@Model.specs.simType</p>
                                    </div>
                                    <div class="row">
                                        <p class="card-text col-6 row"> Camera </p>
                                        <p class="col-6 row"> @Model.specs.camFeatures</p>
                                    </div>
                                    <div class="row">
                                        <p class="card-text col-6 row "> Quantity</p>
                                        <p class="col-6 row"> @Model.quantity</p>
                                    </div>
                                </div>

                            </div>
                        </div>























