@model DomainLayer.ProductModel.ProductEntity

@{
    Layout = "~/Views/Simpleview/_UserLayout.cshtml";
    var data = ViewData["images"] as IEnumerable<DomainLayer.ProductModel.Images>;
    var data1 = ViewData["images"] as IEnumerable<DomainLayer.ProductModel.Images>;
}


<div class="row">
    <div class="sticky col-4 row card">
        <div class="col-3">
            <table class="table ">
                @if (Model.images == null)
                {
                    <h1>No images</h1>
                }
                else
                {
                    foreach (var item in Model.images)
                    {
                        <div class="card" style="width : 50px; height:100px;">
                            <img src="~/Product/Images/@item.imagePath" width="50" height="100" onclick="showImage('@item.imagePath');" />


                        </div>

                    }
                }

            </table>
        </div>
        <div class="col-9 row" style="justify-content: center;">
            @if (Model.images != null && Model.images.Any())
            {

                <img class="showimage col-9" src="~/Product/Images/@Model.images.FirstOrDefault().imagePath" />
                

            }
            else
            {
                <p>No Image</p>
            }
        </div>
        <div class="row  mt-3">
                    <div class="col "><a asp-action="checkout" asp-route-id="@Model.id"><button class="btn btn-orange buynow">Buy Now</button></a></div>
                    <div class="col"><a asp-action="cartpage" asp-route-id="@Model.id"><button class="btn btn-indigo buynow" style="font-size: 9px;">Add to Cart</button></a></div>
                </div>
    </div>
    <div class="col-8" style="position: relative;margin-left: 518px;">
        <div class="col-6 pb-3">
            <h2 class="card-title " style="font-size: 21px;">@Model.name ( Storage @Model.specs.storages.FirstOrDefault().storage; ), Ram ( @Model.specs.rams.FirstOrDefault().ram ))</h2>
            <h3 class="card-subtitle" style="font-stretch: expanded;"> &#8377 @Model.price </h3>
            <h4>Model:@Model.model</h4>
            <div class="row mt-3">

                <div class="col-12">
                    <table class="col-9">
                        <thead>
                            <tr>
                                <th></th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td>Brand :</td>
                                <td>@Model.productBrand</td>
                            </tr>
                            <tr>
                                <td>Model :</td>
                                <td>@Model.model</td>
                            </tr>
                            <tr>
                                <td>Quatity :</td>
                                <td>@Model.quantity</td>
                            </tr>
                            <tr>
                                <td>Os:</td>
                                <td> @Model.specs.os</td>
                            </tr>
                            <tr>
                                <td>Processor :</td>
                                <td>@Model.specs.processor</td>
                            </tr>
                            <tr>
                                <td>Processor Core :</td>
                                <td>@Model.specs.core</td>
                            </tr>
                            <tr>
                                <td>Ram</td>
                                <td>
                                    @foreach (var item in Model.specs.rams.ToList())
                        {<span style="border-block: outset;">@item.ram </span>}
                                </td>
                            </tr>
                            <tr>
                                <td>Storages :</td>
                                <td>
                                @foreach (var item in Model.specs.storages.ToList())
                        {<span style="border-block: outset;">@item.storage </span>}
                            </td>
                            </tr>
                            <tr>
                                <td>SimType</td>
                                <td>: @Model.specs.simType</td>
                            </tr>
                            <tr>
                                <td>Camera</td>
                                <td>: @Model.specs.camFeatures</td>
                            </tr>
                        </tbody>
                    </table>
                   

                <div class="col-12">
                    <p>Description</p>
                    <p>@Model.description</p>
                </div>
            </div>

        </div>
    </div>
    </div>
</div>



<style>
    div.sticky {
        position: -webkit-sticky;
        position: fixed;
        height: 485px;
        margin-top: 96px;
        top: 0;
      
        padding: 9px;
        font-size: 20px;
    }
    div.content {
        margin-left: 84px;
        padding: 1px 16px;
        height: 100%;
    }
</style>