@{
    Layout = "~/Views/Simpleview/_accountLayout.cshtml";
}
@{
    var user = ViewData["userData"] as DomainLayer.Users.UserRegistration;
}


    
        <div class="col-md-9">
            <div class="tab-content">
                <div class="tab-pane fade active show" id="account-general">

                    <div class="card-body media align-items-center">

                    </div>
                    <hr class="border-light m-0">

                    <div class="card-body"style="text-align:center">
                        <div class="form-group">
                            <label class="form-label">Username : @user.Email</label>

                        </div>
                        <div class="form-group">
                            <label class="form-label"style="margin-left:-5%">Name : @user.FirstName</label>

                        </div>
                        @if (user.address == null)
                        {
                            <p>No Address available</p>
                        }
                        else
                        {
                            <div class="form-group">
                               @* <label class="form-label">Address:</label>*@
                                <div class="row">
                                    @foreach (var data in user.address)
                                    {

                                        <div class="col">
                                            @*<p>@data.name</p>*@
                                            <p style="margin-left:-2%"> Address : @data.address</p>
                                            <p style="margin-left:-5%"> District : @data.district</p>
                                            <p style="margin-left:-5%">Pincode : @data.pincode</p>
                                            <p style="margin-left:-4%">State : @data.state</p>
                                            <p style="margin-left:-6%"> Country : @data.country</p>
                                        </div>}
                                </div>
                            </div>}
                    </div>
                    <div class="text-right mt-3">
                        <button type="button" class="btn btn-primary">Edit</button>&nbsp;
                        <a type="button" class="btn btn-primary"asp-action="Index">Back</a>&nbsp;
                    </div>
                </div>



