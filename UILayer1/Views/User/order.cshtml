@{
    ViewData["Title"] = "Mobizone- Buy Now";
}
@model DomainLayer.Checkout
@{
    var data = ViewData["ProductDetails"] as DomainLayer.ProductModel.ProductEntity;
    var user = ViewData["userData"] as DomainLayer.Users.UserRegistration;
    var values = Enum.GetValues(typeof(DomainLayer.PaymentModes));
    Layout = "~/Views/Simpleview/_UserLayout.cshtml";
    var ReturnUrl = ViewBag.ReturnUrl as string;
    int count = 0;
}
<script src="~/lib/jquery/dist/jquery.min.js"></script>
@if (user == null)
{
    <h5>Not A User</h5>
    <a asp-action="login"><button class="btn btn-primary">Click To Login</button></a>
}
else
{ }
    <div class="container-fluid mt-3">

        <div class="row" style="margin-right: 6%;margin-left: 7%;">
            <form action="/user/order" method="post" class="col" id="my-form">
                <input asp-for="id" value="0" type="hidden" />
                <input asp-for="productId" type="hidden" value="@data.id" />
                <input asp-for="userId" type="hidden" value="@user.UserId" />
                <div>
                    
                    <div class="card ">
                        <div class="">
                            <div class="address" ><p class="card-title">Delivery Address</p></div>
                            
                            @if (user.address == null)
                            {
                                <p>No address available please create one </p>
                            }
                            else
                            {
                                <div class="addressDetails"  id="realDiv">
                                @foreach (var address in @user.address)
                                {
                                    <div class="form-check ">
                                        @*<input multiple class="form-check-input  addressInput" asp-for="@Model.addressList[count].IsChecked" type="checkbox"  id="flexCheckDefault" onchange="showbutton1()" />*@
                                        @Html.CheckBoxFor(model => model.addressList[count].IsChecked, new { @class = "check",@id=address.id })
                                        <input asp-for="addressList[count].id" value="@address.id" type="hidden" />
                                        <input asp-for="addressList[count].address" value="@address.address" type="hidden" />
                                        <input asp-for="addressList[count].country" value="@address.country" type="hidden" />
                                        <input asp-for="addressList[count].district" value="@address.district" type="hidden" />
                                        <input asp-for="addressList[count].name" value="@address.name" type="hidden" />
                                        <input asp-for="addressList[count].phoneNumber" value="@address.phoneNumber" type="hidden" />
                                        <input asp-for="addressList[count].pincode" value="@address.pincode" type="hidden" />
                                        <input asp-for="addressList[count].additionalInfo" value="@address.additionalInfo" type="hidden" />
                                        <input asp-for="addressList[count].state" value="@address.state" type="hidden" />
                                        <label class="form-check-label @address.id" for="flexCheckDefault" id="@address.id">
                                            @address.name <br> @address.address<br> @address.district
                                        </label>
                                    </div>
                                    <hr />
                                    count++;
                                }
                                </div>
                            }
                            <div id="selectedAddress"></div>

                            <div class="row"> 
                                <div class="col"><a id="addNewAddress" href="/user/address?ReturnUrl=@ReturnUrl" class="btn btn-orange" style=" color: white">Add New Address</a></div>
                                                   <div class="col col d-flex justify-content-end " id="addressContinue ">
                                <a style=" background-color: #e52d2e;" href="#" class="btn btn-orange  " id="submit_prog" onclick="orderDetails()">continue</a></div>

                            </div>
                        </div>
                    </div>
                    <div class="card order mt-3" style="display:none">
                        <div class="">
                            
                            <h5 class="card-title address">Order Summary</h5>
                            
                            <div class="orderDetails">
                                <div class="form-check">
                                    <div class="row">
                                        <div class="col-12 row">
                                            @if (data.images == null || data.images.Count == 0)
                                            {
                                                <div class="col-3" align="center"><a asp-action="ProductDetails" asp-route-id="@data.id"><img src="~/css/Images/noimage.jpg" style="width: 10%;"></a></div>
                                            }
                                            else
                                            {
                                                @foreach (var item in data.images)
                                                {
                                        
                                            <a asp-action="ProductDetails" asp-route-id="@data.id" class="col-3"><img src="~/Product/Images/@item.imagePath" style="width: 100%;"></a>
                                            break;
                                            }
                                            }

                                        <div class="col-9">
                                            <label class="form-check-label" for="flexCheckDefault" style="font-weight: bold;">
                                                @if (data.specs.rams != null && data.specs.rams.Count() > 0)
                                                {@data.name;
                                            }
                                                (@if (data.specs.rams != null && data.specs.rams.Count() > 0)
                                                {
                                                    @data.specs.rams.FirstOrDefault().ram;
                                                } GB, @if (data.specs.storages != null && data.specs.storages.Count() > 0)
                                                {
                                                    @data.specs.storages.FirstOrDefault().storage}
                                                GB)<br>&#8377 @data.price;
                                            <div>Qty:<input name="quantity" asp-for="quantity" type="number" style="width:50px; height:20px;" value="1" id="quantitytag" /></div>
                                            </label>
                                        </div>
                                        </div>
                                        
                                     </div>


                                   
                                

                                 </div>
                            </div>
                            



                            <div class="row">
                                <div class="col">
                                    <a href="#" class="btn btn-orange toggle-button2" style="background-color: #e52d2e;" onclick="orderDetailsCancel()">cancel</a>
                                </div>
                                <div class="col col d-flex justify-content-end " style="display:none"><a href="#" class="btn btn-orange toggle-button2" id="paymentContinue"style="background-color: #e52d2e;" onclick="paymentDetails()">continue</a></div>
                            </div>

                        </div>
                    </div>

                    <div class="card payment mt-3" style="display:none">
                        <div class="">
                            <h5 class="card-title address">Payment</h5>
                            @foreach (var item in values)
                            {

                                <div class="form-check">
                                    <input class="form-check-input" name="paymentModeId" type="checkbox" value='@Convert.ToInt32(item)'>
                                    <label class="form-check-label" for="flexCheckDefault">
                                        @item
                                    </label>
                                </div>
                            }
                            <p class="card-text"></p>
                            <div class="row">
                                <div class="col"><a href="#" onclick="paymentCancel()" class="btn btn-orange">Cancel</a></div>
                                <div class="col"></div>
                                <div class="col col d-flex justify-content-end "><input type="submit" value="Confirm Order" class="btn btn-orange submit" style="background-color: #e52d2e;"  onchange="displaySubmit()" style="display:none;"/></div>
                            </div>


                        </div>
                    </div>


                </div>
            </form>

                <div class="col-6">
                    <div class="card" style="margin-left: 19%;margin-right: -38%;">

                        <div class="Price">
                            <h5 class="card-title" style="">Price Details</h5>
                           
                        </div>
                        <div>
                            <p class="card-text" id="priceField">Price </p>
                            <div class="card-text"> <div class="row"><p class="col-6">Shipping Charge <p class="col-6" style="color: green;">  Free</p>  </div></div>
                            <div id="price"></div>
                        </div>
                        
                        <div class="">
                            <p class="card-text" id="totalPrice">Total Payable</p>
                            <div id="price"></div>
                        </div>




                    </div>
                </div>
                <!-- Card with center text alignment -->
                
            
        </div>
    </div>

