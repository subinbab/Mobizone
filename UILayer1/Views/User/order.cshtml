            $(".toggle-button2").show();
        }
        $("input[name = 'addressId']").change(function () {
            $(".toggle-button1").toggle();
        })
        $("input[name = 'paymentModeId']").change(function () {
            $(".submit").toggle();
        })

        function address(){
            $(".order").hide();
            $(".addressDetails").show();
        }

        $('#my-form').on('change keyup paste', ':input', function (e) {
