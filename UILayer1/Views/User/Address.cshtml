@model DomainLayer.Users.Address

@{

    Layout = "~/Views/Simpleview/_UserLayout.cshtml";
   

    ViewData["Title"] = "Manage Profile";
}


<div class="row align-item-center">
    <div class="col-md-8 mb-4">
        <div class="card-body">
            <form asp-action="Address" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>


                <input asp-for="id" class="form-control" type="hidden" />

              @*  <div class="form-group row mb-4">
                    <div class="col-md-6">
                        <label asp-for="name" class="control-label">Name</label>
                        <input asp-for="name" class="form-control" />
                        <span asp-validation-for="name" class="text-danger"></span>
                    </div>
                    <div class="col"></div>

                </div>*@

            <div class="row">
                <div class="col-md-8">
                    <label asp-for="name" class="control-label">Name</label>
                    <input asp-for="name" class="form-control" />
                    <span asp-validation-for="name" class="text-danger"></span>
                </div>
                <div class="col-md-6">
                    <label asp-for="address" class="control-label" style="padding-top: 10%">Address</label>
                    <input asp-for="address" class="form-control" />
                    <span asp-validation-for="address" class="text-danger"></span>
                </div>
                <div class="col-md-6">
                    <label asp-for="district" class="control-label"  style="padding-top: 10%">District</label>
                    <input asp-for="district" class="form-control" />
                    <span asp-validation-for="district" class="text-danger"></span>
                </div>
            </div>
                <div class="row">
                    <div class="col-md-6">
                        <label asp-for="state" class="control-label"  style="padding-top: 10%">State</label>
                        <input asp-for="state" class="form-control" />
                        <span asp-validation-for="state" class="text-danger"></span>
                    </div>
                    <div class="col-md-6">
                        <label asp-for="country" class="control-label"  style="padding-top: 10%">Country</label>
                        <input asp-for="country" class="form-control" />
                        <span asp-validation-for="country" class="text-danger"></span>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6">
                        <label asp-for="pincode" class="control-label" style="padding-top: 10%">Pincode</label>
                        <input asp-for="pincode" class="form-control" />
                        <span asp-validation-for="pincode" class="text-danger"></span>
                    </div>
                    <div class="col-md-6">
                        <label asp-for="phoneNumber" class="control-label" style="padding-top: 10%">Phone Number</label>
                        <input asp-for="phoneNumber" class="form-control" />
                        <span asp-validation-for="phoneNumber" class="text-danger"></span>
                    </div>
                    <div class="col-md-6">
                        <label asp-for="additionalInfo" class="control-label" style="padding-top: 10%">Additional Info</label>
                        <input asp-for="additionalInfo" class="form-control" />
                        <span asp-validation-for="additionalInfo" class="text-danger"></span>
                    </div>
                </div>
                <br />
                <br />
                <div class="text-center">
                    <div class="form-group">


                        <input type="submit" value="Save" class="btn btn-orange" style="margin-right: -12%;" />  

                        <a asp-action="ManageAddress" value="Cancel" class="btn btn-primary" style="margin-left: 93%; margin-top: -41%;" />Cancel</a>

                    </div>

</div>
            </form>

        </div>
    </div>
</div>
<style>
    .card-body{
        margin-left:40%;
    }
    .text-center{
        margin-left:73%;
    }
</style>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
