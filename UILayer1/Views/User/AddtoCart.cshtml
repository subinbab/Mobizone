@model IEnumerable<DomainLayer.CartDetails>

@{
    ViewData["Title"] = "Mobizone- AddtoCart";
    var cartList  = Model.ToList();
}
<link rel="stylesheet" href="https://cdn.datatables.net/1.10.22/css/jquery.dataTables.min.css" />

<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.0/css/bootstrap.min.css">
<link href="~/css/Quantity.css" rel="stylesheet" />
<script type="text/javascript" charset="utf8" src="//code.jquery.com/jquery-1.10.2.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/2.1.3/jquery.min.js"></script>
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/js/bootstrap.min.js"></script>
<script src="https://cdn.datatables.net/1.10.9/js/jquery.dataTables.min.js" defer></script>
<script data-require="jquery@3.1.1" data-semver="3.1.1" src="https://ajax.googleapis.com/ajax/libs/jquery/3.1.1/jquery.min.js"></script>
<script src="~/js/Quantity.js"></script>
@{
    int? price = 0;
    if (Model != null)
    {
        foreach (var data in Model)
        {
            price = price + data.price;
        }
    }

}

    <div class="row" >
        <div class="col-8">
            @if (Model != null)
            {
                @foreach (var data in Model)
                {

                    <div class="row">
                        <div class="col-2">
                            @if(data.product.images == null || data.product.images.Count() == 0)
                    {
                        <p>no image</p>
                    }
                    else
                    {
                        <img src="~/Product/Images/@data.product.images.FirstOrDefault().imagePath" style="width: 100%;height: 84%;">
                    }      
                        </div>
                        <div class="col-7">
                            <p class="textStyle" style="margin: 4%;">@data.product.name</p>
                            <p class="textStyle textColorGreen" style="margin: 5%;">@data.price</p>
                            <div style="margin: 3%;"><a asp-action="minus" asp-route-id="@data.productId"><span  id="minus" class="glyphicon glyphicon-minus" style="background-color: gray;padding: 5px;border-radius: 13px;margin-right: 4px;"></span></a><input id="quantity" style="width: 13%;margin: 6%;" type="number" value="@data.quantity" /><a asp-action="plus" asp-route-id="@data.productId"><span id="plus" class="glyphicon glyphicon-plus" style="background-color: gray;padding: 5px;border-radius: 13px;margin-left: 4px;"></span></a></div>
                        </div>
                        <div class="3" style="margin: 10%;">
                            <a asp-action="RemoveCart" asp-route-id="@data.productId"><span class="glyphicon glyphicon-trash" style="font-size: 27px;padding: 5%;"></span></a>
                        </div>
                    </div>
                }
            }

        </div>
        <div class="col-4 ">
            <div class="row" style="width: 32vh;height: 53vh;">
                <div class="col-12" style="border: groove;height: 14%;">
                    <p class="textStyle">Total</p>
                </div>
                <hr />
                <div class="col-12" style="border: groove;height: 70%;">
                    @if(Model != null)
                    {
                        <p><span>Price( @Model.Count() item) : </span><span>@price</span></p>
                    }
                    <p><span>Price( 0 item) : </span><span>0</span></p>

                </div>
                <hr />
                <div class="col-12" style="border: groove;height: 17%;">
                    <p><span style="font-family: sans-serif;font-weight: bold;font-size: 17px;">Total Amount :</span><span style="color: green;font-size: 26px;text-align: center;margin: 10px;font-weight: bold;">@if (Model != null)
                    { @price }
                    else {  }</span></p>
                </div>
                <form action="/user/CartOrder" method="post" style="height: 144%;width: 100%;">
                    <div class="col-12" style="height: 53%;padding: 0px;">
                        <input  type="submit" value="Proceed To Buy" style="
    width: 100%;
    height: 18%;
"/>
                    </div>
                </form>
            </div>
        </div>
    </div>

 
<style>
    .textStyle {
        font-variant-caps: normal;
        font-style: normal;
        font-weight: bold;
        font-size: 23px;
    }

    .textColorGreen {
        color: green;
    }
</style>

