<script>
    function plus(quantity, id) {
        var qty = quantity
        var id = id
        $.post("/user/quantity", { quantity: qty + 1, id: id }, function (data) {
            location.reload();
        });
    }

    function minus(quantity, id) {
        var qty = quantity
        var id = id
        $.post("/user/quantity", { quantity: qty - 1, id: id }, function (data) {
            location.reload();
        });
    }
    function deleteItem(data) {
        var id = data
        //console.log(id)
        $.post("/user/removeCart", { id: id }, function (data) {
            location.reload();
        });
    }
</script>
